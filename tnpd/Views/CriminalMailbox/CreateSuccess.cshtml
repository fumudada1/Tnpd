@model TnpdModels.Case
<div class="row">
    <div class="col-12">

        <div class="hrline"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="col-form-label" >
                    姓名：</label>
               @Model.Name
            </div>
            <div class="form-group col-md-6"  style="display: none">
                <label class="col-form-label">
                    性別：</label> @Model.Gender
              
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label">
                E-Mail：</label>
            @Model.Email
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="col-form-label">
                    電話：</label>
                @Model.TEL
            </div>
            <div class="form-group col-md-6"  style="display: none">
                <label class="col-form-label" >
                    職業：</label>
                @Model.Job
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label" >
                地址：</label>
            <div class="form-row ">
              @Model.Address
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label" >
                主題：</label>
           @Model.Subject
        </div>

        <div class="form-group">
            <label class="col-form-label">內容：</label>
            @Html.Raw(UIUtility.Txt2Html(Model.Content)) 
        </div>

       

        <div class="hrline"></div>

        <div class="form-row justify-content-center">
           <a href="/home">回首頁</a>
        </div>

    </div>
</div>

