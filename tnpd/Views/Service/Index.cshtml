@using tnpd.Helpers
@using MvcPaging
@model MvcPaging.IPagedList<TnpdModels.Ese>


<div class="row">
    <div class="col-12">
        @if (@Model.TotalItemCount > 0)
        {
            <table class="table table-hover tablestyle rwd-table">
                <thead>
                    <tr>
                        <th class="w-10">類別</th>
                        <th class="w-30">主題</th>
                        <th>承辦單位</th>
                        <th>辦理期限</th>
                        <th>點閱</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td class="none title01">@item.Catalogs.FirstOrDefault().Subject</td>
                            <td class="none"><a href="@Url.Action("Details", "Service", new RouteValueDictionary(new {id = item.Id, sClass = ViewBag.CategoryId, unid = ViewBag.UnId}))" title="@item.Subject">@item.Subject</a></td>
                            <td data-th="發佈單位">@item.initOrg</td>
                            <td data-th="發布日期">@UIUtility.Date2RocFormat(item.InitDate)</td>
                            <td data-th="點閱率">@item.Views</td>
                        </tr>
                    }



                </tbody>
            </table>
            <div class="w-100"></div>

   
    
    
            <div class="pager">
                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
            </div>
        
        }
        else
        {
            <div class="no-Data">目前暫無資料</div>
        }

    </div>
</div>
