@model TnpdModels.Case

<div class="row">

    <div class="form-row" style="width: 100%">
        <div class="form-group col-md-4">
            <label class="col-form-label" ><span class="text-danger">*</span>
                姓名：</label>
           @Model.Name
        </div>
        <div class="form-group col-md-4">
            <label class="col-form-label"><span class="text-danger">*</span>
                性別：</label> @Model.Gender
        
        </div>
        <div class="form-group col-md-4">
            <label class="col-form-label"><span class="text-danger">*</span>
                身分證字號：</label>
           @Model.Pid
        </div>
    </div>

    <div class="form-row" style="width: 100%">
        <label class="col-form-label" ><span class="text-danger">*</span>
            現居地址：</label> @Model.PostalCode  @Model.Address
      

    </div>

    <div class="form-row" style="width: 100%">
        <label class="col-form-label"><span class="text-danger">*</span>
            戶籍地址：</label>  @Model.PPostalCode   @Model.PAddress
       
    </div>

    <div class="form-row" style="width: 100%">
        <div class="form-group col-md-4">
            <label class="col-form-label" ><span class="text-danger">*</span>
                聯絡電話(住家)：</label>
            @Model.HomeTEL

        </div>
        <div class="form-group col-md-4">
            <label class="col-form-label" >
                聯絡電話(辦公室)：</label>
            @Model.OfficeTEL

        </div>

    </div>

    <div class="form-row" style="width: 100%">
        <div class="form-group col-md-8">
            <label class="col-form-label"><span class="text-danger">*</span>
                行動電話：</label>
            @Model.TEL

        </div>
    </div>


    <div class="form-row" style="width: 100%">
        <label class="col-form-label" ><span class="text-danger">*</span>
            E-Mail：</label>
        @Model.Email
    </div>

    <div class="form-row" style="width: 100%">
        <div class="form-group col-md-6">
            <label class="col-form-label" ><span class="text-danger">*</span>
                報案人類別：</label>
           @Model.CaseReportType
        </div>
    </div>

    <div class="form-row" style="width: 100%">

        <div class="form-group col-md-3 mb-0">
            <label class="col-form-label"><span class="text-danger">*</span>
                發生日期：</label>
            @Model.ODate.Value.ToString("yyyy-MM-dd")
        </div>
        <div class="form-group col-md-6 mb-0">
            <label class="col-form-label"><span class="text-danger">*</span>
                發生時段：</label>  @Model.STime
           
        </div>
    </div>

    <div class="form-row" style="width: 100%">
        <label class="col-form-label" ><span class="text-danger">*</span>
            發生地點：</label>
        @Model.Oplace


    </div>

    <div class="form-row" style="width: 100%">
        <label class="col-form-label"><span class="text-danger">*</span> 案情摘要：</label>
        @Html.Raw(UIUtility.Txt2Html(Model.Content)) 
    </div>

  

    <div class="hrline"></div>

        <div class="form-row justify-content-center">
            <a href="/home">回首頁</a>
        </div>
    </div>





