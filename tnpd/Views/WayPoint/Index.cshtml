@using tnpd.Helpers
@using MvcPaging
@model MvcPaging.IPagedList<TnpdModels.WayPoint>

<div class="row">
    <div class="col-12">
        @if (@Model.TotalItemCount > 0)
        {
            <table class="table table-hover tablestyle rwd-table">
                <thead>
                <tr>
                    <th class="w-10">市區鄉鎮</th>
                    <th>設置地址</th>
                    <th>管轄警局</th>
                    <th>經度</th>
                    <th>緯度</th>
                    <th class="w-10">拍攝方向</th>
                    <th class="w-10">限速</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td class="none title01">@item.RegionName</td>
                        <td class="none">@item.Address</td>
                        <td class="none">@item.DeptNm</td>
                        <td class="none">@item.Longitude</td>
                        <td class="none">@item.Latitude</td>
                        <td class="none">@item.direct</td>
                        <td class="none">@item.limit</td>
                       
                    </tr>

                }
                
                </tbody>
            </table>
            <div class="w-100"></div>

   
    
    
            <div class="pager">
                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
            </div>
        } else
        {
            <div class="no-Data">目前暫無資料</div>
        }
              
        
       

    </div>
</div>

