</div>


@using (Html.BeginForm("TaskCloseReview", "Review", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row col-12 mx-auto justify-content-end my-5" }))

{

    @Html.Hidden("id")
    <input type="button" value="結案" class=" submitBtn btn col-4 mr-2 letterSpace" data-title="結案" data-toggle="modal" data-target="#confirmModal" />
    <input type="button" value="重新確驗" class=" clearBtn btn col-2 mr-2" data-title="重新確驗" data-toggle="modal" data-target="#confirmModal" />
    @Html.ActionLink("取消", "Index", "Home", null, new { @class = "clearBtn letterSpace mr-3 btn col-2" })


    <!-- Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content ">
                <div class="modal-header border-0 ">
                    <h5 class="modal-title modalHeader mx-auto" id="exampleModalLongTitle">請確定</h5>
                    <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body px-4 colorGray">
                    <span class="reason">
                        錯誤，請找資訊人員確認
                    </span>
                </div>
                <div class="modal-footer border-0 px-3">
                    <input type="submit" value="錯誤" name="result" class=" modalSubmitBtn btn " />
                    <button type="button" class="btn  modalClearBtn letterSpace" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>

}



@section scripts
{
    <script>


        $('#confirmModal').on('show.bs.modal',
            function (event) {
                var btn = $(event.relatedTarget);
                var modal = $(this);
                var title = btn.data('title');
                modal.find('.modal-title').text(title);
                modal.find('.modalSubmitBtn').val(btn.val());

                if (btn.val() == '結案') {
                    modal.find('.modal-body').empty();
                    $('<span></span>').text('是否確認結案?').appendTo('.modal-body');
                }


                if (btn.val() == '重新確驗') {
                    modal.find('.modal-body').empty();
                    $('<span></span>').text('請輸入重新確驗原因(必填，上限50字)，案件將退回分局管理者重新進行確驗').appendTo('.modal-body');
                    $('<textarea />').prop("row", "3")
                        .prop("class", "mt-1 form-control")
                        .prop("maxlength", "50")
                        .prop("name", "memo")
                        .prop("required", "required")
                        .appendTo('.modal-body');

                }

            });

    </script>

    <script src="~/Scripts/sweetalert.min.js"></script>
    @*未填原因的alert*@
    <script>
        $(function() {
            var alert = '@TempData["Alert"]';
            if (alert == 'true') {
                swal({
                    title: "請填寫原因",
                    text: "",
                    icon: "warning"
                });
            }
        });
    </script>
}