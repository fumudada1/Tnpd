@section scripts
{
    @*gallery*@
    <script>
        $(function () {
            // Multiple images preview in browser
            imagesPreview = function (input, placeToInsertImagePreview) {

                if (input.files) {
                    var filesAmount = input.files.length;

                    for (i = 0; i < filesAmount; i++) {
                        //用來讀取file資料的FileReader
                        var reader = new FileReader();

                        reader.onload = function (event) {
                            $($.parseHTML('<img>')).attr('src', event.target.result)
                                .appendTo(placeToInsertImagePreview);

                        }
                        //有選取file時，使用fileReader讀取file資料
                        //readAsDataURL可以將讀取到的file資料轉成
                        //data:......的URL型式，在讀取完後觸發load
                        //事件，URL存在FileReader.result中
                        reader.readAsDataURL(input.files[i]);
                    }
                }
            };

        });
    </script>


    <script>
        $('#confirmModal').on('show.bs.modal',
            function(event) {
                var btn = $(event.relatedTarget);
                var modal = $(this);
                var title = btn.data('title');
                modal.find('.modal-title').text(title);
                modal.find('.modalSubmitBtn').val(btn.val());

                if (btn.val() == '確驗完修') {
                    modal.find('.modal-body').empty();
                    $('<span></span>').text('是否確驗完修?').appendTo('.modal-body');
                }
                if (btn.val() == '確驗未完修') {

                    var TaskIncompleteMemo ='@Model.TaskIncompleteMemo';

                    modal.find('.modal-body').empty();
                    $('<span></span>').text('請輸入退件原因(必填，上限50字)，案件將退回廠商重新完修').appendTo('.modal-body');
                    $('<textarea />').prop("row", "3")
                        .prop("class", "mt-1 form-control")
                        .prop("maxlength", "50")
                        .prop("name", "memo")
                        .prop("required", "required")
                        .val(TaskIncompleteMemo)
                        .appendTo('.modal-body');
                    $('<span></span>').prop("class", "mt-3 d-block").text('請檢附退件圖片').appendTo('.modal-body');
                    $('<div></div>').prop("class", "row modalImageBox").appendTo('.modal-body');
                    $('<input />').prop("type", "file")
                        .prop("class", "btn btn-light col-8 modalImageInput")
                        .prop("name", "image")
                        .appendTo('.modalImageBox');
                    $('<div></div>').prop("class", "col-3 pr-0 modalImage d-flex justify-content-end")
                        .appendTo('.modalImageBox');
                    var oldImage = '@Model.TaskIncompleteImage';

                    if (oldImage != '') {
                        $('<input/>').prop("name", "oldImage").prop("type", "hidden").prop("value", oldImage).appendTo('.modalImage');
                        $('<a></a>').prop("href", "/image/"+oldImage).appendTo('.modalImage');
                        $('<img/>').prop("src", "/image/s" + oldImage).appendTo('.modalImage a');
                        $('<input/>').prop("class", "pictureRemove btn").prop("type", "button").prop("value", "x").appendTo('.modalImage');
                    }

                    $('.modalImageBox').on('change',
                        '.modalImageInput',
                        function() {
                            var gallery = $(this).parent().find('.modalImage');
                            //把預覽圖片先清空
                            gallery.empty();
                            imagesPreview(this, gallery);
                            $('<input />').prop("type", "button").prop("value","x").prop("class", "pictureRemove btn ")
                                .appendTo(gallery);
                            if ($(this).val() == '') {
                                gallery.empty();
                            }
                        });


                    $('.modalImageBox').on('click',
                        '.pictureRemove',
                        function() {
                            $(this).parent().parent().find('.modalImageInput').val('');
                            $(this).parent().empty();
                        });


                }

                if (btn.val() == '重新確驗') {
                    modal.find('.modal-body').empty();
                    $('<span></span>').text('請輸入重新確驗原因(必填，上限50字)，案件將退回派出所承辦人員重新進行確驗').appendTo('.modal-body');
                    $('<textarea />').prop("row", "3")
                        .prop("class", "mt-1 form-control")
                        .prop("maxlength", "50")
                        .prop("name", "memo")
                        .prop("required", "required")
                        .appendTo('.modal-body');

                }

            });

    </script>


