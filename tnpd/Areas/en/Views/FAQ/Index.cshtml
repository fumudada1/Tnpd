@using tnpd.Helpers
@using MvcPaging
@model MvcPaging.IPagedList<TnpdModels.News>
@{
    string areaName = ViewContext.RouteData.DataTokens["area"].ToString();
}


<div class="row">
    <div class="col-12">
        @if (@Model.TotalItemCount > 0)
        {
            <table class="table table-hover tablestyle rwd-table mt-3">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Issues the date</th>
                        <th>Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>

                            <td class="none"><a href="@Url.Action("Details", "FAQ", new RouteValueDictionary(new { id = item.Id, sClass = ViewBag.CategoryId, unid = ViewBag.UnId, area = areaName }))" title="@item.Subject">@item.Subject</a></td>
                            <td data-th="Issues the date">@item.InitDate.Value.ToString("yyyy-MM-dd")</td>
                            <td data-th="Rate">@item.Views</td>
                        </tr>
                    }

                  
                </tbody>
            </table>

          
            <div class="w-100"></div>

   
    
    
            <div class="pager">
                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(x=>x.AddRouteValue("sClass",Request["sClass"]))
            </div>
        }
        else
        {
            <div class="no-Data">No Data</div>
        }




    </div>
</div>
