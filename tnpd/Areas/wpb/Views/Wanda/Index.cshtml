@using tnpd.Helpers
@using MvcPaging
@model MvcPaging.IPagedList<TnpdModels.Wanda>
@{
    string areaName = ViewContext.RouteData.DataTokens["area"].ToString();
}
<div class="row">
    <div class="col-12">
        @if (@Model.TotalItemCount > 0)
        {
            <table class="table table-hover tablestyle rwd-table">
                <thead>
                    <tr>
                        <th>分局(區)</th>
                        <th>路名</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td class="none title01">@item.StationInfo.Subject</td>
                            <td class="none"><a href="@Url.Action("Details", "Wanda", new RouteValueDictionary(new {id = item.Id, unid = ViewBag.UnId,area=areaName }))" title="@item.Subject">@item.Subject</a></td>
                           
                        </tr>
                    }


                </tbody>
            </table>
            <div class="w-100"></div>

   
    
    
            <div class="pager">
                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(x=>x.AddRouteValue("sClass",Request["sClass"]))
            </div>
        }
        else
        {
            <div class="no-Data">目前暫無資料</div>
        }


    </div>

</div>

