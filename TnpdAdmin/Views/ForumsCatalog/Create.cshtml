@using TnpdModels
@model TnpdModels.ForumsCatalog

@{
    ViewBag.Title = "新增";
}

<h2 class="page-title"><i class="fa fa-pencil-square-o"></i>新增</h2>

    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @ViewBag.Message
    <fieldset>
        <legend>ForumsCatalog</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)

        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Title,new { placeholder=ModelsAttributeHelper<TnpdModels.ForumsCatalog>.GetDisplayName("Title") })
            @Html.ValidationMessageFor(model => model.Title)
       
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Memo)

        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Memo,new { @style = "height: 150px",placeholder=ModelsAttributeHelper<TnpdModels.ForumsCatalog>.GetDisplayName("Memo") })
            @Html.ValidationMessageFor(model => model.Memo)
       
            
        </div>

             @Html.Hidden("ListNum","0")
        <p>
            <input type="submit" value="新增" class="btn-button" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("回列表", "Index",new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
