
@using MvcPaging
@using Tnpd.Helpers
@model MvcPaging.IPagedList<TnpdModels.Case>

@{
    ViewBag.Title = "案件狀態回復";
}

<h2>案件狀態回復</h2>


@using (Html.BeginForm())
{
    <div>
       
        案號：@Html.InputSearchBox("SearchByCaseId", ViewData["SearchByCaseId"])
       
    </div>
    <div>
        <input type="submit" value="搜尋" />
    </div>

    
}

<table class="table table-v">
    <tr>
    
        <th>
            案號
        </th>
        <th>
            案件來源
        </th>
        <th>
            申辦時間
        </th>
        <th>
            寄件者
        </th>
        <th>
            主旨
        </th>
        <th>
            承辦單位
        </th>
        <th>
            承辦人
        </th>
        <th>
            預結案日期
        </th>
        <th>
            辦理天數
        </th>
        <th>
            案件狀態
        </th>
    </tr>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.CaseID.ToString(), "RestoneEdit", new { id=item.Id,pclass=Request["pclass"]}) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseType)
            </td>
            <td>
                @item.InitDate
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @if (item.Poprocs.Count > 0)
                {
                    @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignUnit.ParentUnit.Subject) @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignUnit.Subject)
                }
            
            </td>
            <td>
                @if (item.Poprocs.Count > 0)
                {
                    @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignMember.Name)
                }
           
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predate)
            </td>
            <td>
                @{
                    Double timespan;
                    if (item.Poprocs.Count > 0)
                    {

                        if (item.Poprocs.FirstOrDefault().EndDateTime.HasValue)
                        {

                            timespan = new TimeSpan(item.Poprocs.FirstOrDefault().EndDateTime.Value.Ticks -
                                                    item.InitDate.Value.Ticks).TotalDays;
                            @Math.Round(timespan, 2).ToString()
                        }
                        else
                        {

                            timespan = new TimeSpan(DateTime.Now.Ticks - item.InitDate.Value.Ticks).TotalDays;
                            @Math.Round(timespan, 2).ToString()
                        }
                    }
                    else
                    {
                        timespan = new TimeSpan(DateTime.Now.Ticks - item.InitDate.Value.Ticks).TotalDays;
                        @Math.Round(timespan, 2).ToString()
                    }

                }
            </td>
            <td>
                @if (item.Poprocs.Count > 0)
                {
                    @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().Status)
                }
                else
                {
                    <span>未分派</span> 
                }
                @if (item.Cases.Count > 0)
                {
                    <br/>  <span><img src="/Images/documents.png" style="width: 20px"/>併案案件</span> 
                }   
            </td>
       
       
        </tr>
    }
    </tbody>
</table>

<div class="pager">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(x => x.AddRouteValue("pclass", Request["pclass"]))
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function() {
            $(".datepicker").datepicker();
           

            


        });
    </script>
}

