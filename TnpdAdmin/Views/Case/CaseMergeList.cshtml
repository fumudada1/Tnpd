
@using MvcPaging
@using Tnpd.Helpers
@model TnpdModels.Case

@{
    ViewBag.Title = "合併案件一覽";
}

<h2>案號：@Model.CaseID 合併案件一覽</h2>
  
<div>
    共合併 @Model.Cases.Count() 件
</div>
<table class="table table-v">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
       
   
    </tr>
<tbody>
@foreach (var item in Model.Cases) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CaseID)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
       
      
    </tr>
}
</tbody>
</table>
<div>
共合併 @Model.Cases.Count() 件

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <input type="hidden" name="id" value="@Model.Id"/>
    <input type="hidden" name="isClose" value="0"/>
    <input type="submit"  value="解除合併"/> <span>(解除後的案件，會回到派案作業)</span>
}</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    @if (ViewBag.isClose == true)
    {
    <script>
        $(document).ready(function() {
            window.close();


        });


    </script>
    }

}

