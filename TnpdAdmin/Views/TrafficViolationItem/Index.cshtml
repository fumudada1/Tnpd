
@using MvcPaging
@using TnpdModels
@model MvcPaging.IPagedList<TnpdModels.TrafficViolationItem>

@{
    ViewBag.Title = "前台違規事項設定列表";
    string typeName = ViewBag.typeid == 0 ? "平面道路" : "快速道路";

}

<h2>列表前台違規事項-<span style="color: red">@typeName</span></h2>

<p>
    @Html.ActionLink("新增前台違規事項", "Create", new { id=ViewBag.typeid })
   
</p>
@using (Html.BeginForm())
{
    <div>
        違規地點分類: <a href="/TrafficViolationItem/index/0">平面道路</a> |<a href="/TrafficViolationItem/index/1">快速道路</a> 
        
    </div>
    
}

<table class="table table-v">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ListNum)
        </th>
         <th>
            新排序
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().IsEnable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TrafficViolationType)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().InitDate)
        </th>
        
        <th></th>
    </tr>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
                 @Html.DisplayFor(modelItem => item.ListNum)
        </td>
        <td>
                @Html.TextBoxFor(modelItem => item.ListNum,new {@class="position"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEnable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrafficViolationType)
        </td>
      
        
        <td>
            @Html.DisplayFor(modelItem => item.InitDate)
        </td>
       
        <td>
            @Html.ActionLink("編輯", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("內容", "Details", new { id=item.Id }) | *@
            @Html.ActionLink("刪除", "Delete", new { id=item.Id })
            @Html.Hidden("ID",item.Id)
        </td>
    </tr>
}
</tbody>
</table>

@using (Html.BeginForm("Sort",null))
    {
        <div>
            <input type="hidden" id="sortData" name="sortData"/>
            <input type="submit" value="更新排序" />
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="@Url.Content("~/Scripts/jquery.tablednd.0.5.js")" type="text/javascript"></script>
   
<script>
    $(document).ready(function () {
        $("tbody").tableDnD({
            onDragClass: "showDragHandle",
            onDrop: function (table, row) {
                var rows = table.rows;
                var map = "";
                for (var i = 0; i < rows.length; i++) {
                    $(rows[i]).find(".position").val(i + 1);
                    map += $(rows[i]).find("#ID").val() + ":" + (i + 1) + ",";
                }
                $("#sortData").val(map);
            }
        });
    });
</script>
    <style>
        .position {
            width: 27px;
        }
    </style>
}


