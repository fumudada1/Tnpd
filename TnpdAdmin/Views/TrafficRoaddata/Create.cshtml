@using TnpdModels
@model TnpdModels.TrafficRoaddata

@{
    ViewBag.Title = "違規道路設定新增";
}

<h2>違規道路設定新增</h2>

    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @ViewBag.Message
    <fieldset>
        <legend>TrafficRoaddata</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RegionId)

        </div>
        <div class="editor-field">
            @Html.DropDownList("RegionId")
            @Html.ValidationMessageFor(model => model.RegionId)
       
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)

        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Subject,new { placeholder=ModelsAttributeHelper<TnpdModels.TrafficRoaddata>.GetDisplayName("Subject") })
            @Html.ValidationMessageFor(model => model.Subject)
       
            
        </div>

             @Html.Hidden("ListNum","0")
        
        <p>
            <input type="submit" value="新增" /><input type="button" onclick="history.back()" value="回到上一頁" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
