@model TnpdModels.NewsCatalog



<h2>@ViewBag.Title 類別管理刪除</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>NewsCatalog</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Subject)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Subject)
    </div>
    <div class="display-label">
        本類別包含
    </div>
    <div class="display-field">
        @Model.Newses.Count() 筆資料
    </div>
   

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Poster)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Poster)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.InitDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.InitDate)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Updater)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Updater)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.UpdateDate)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UpdateDate)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    if (Model.Newses.Count == 0)
    {
        <p>
            <input type="submit" value="刪除" class="btn-button"/>

        </p>
    }
    else
    {
        <p style="color: red">
            此類別包含 @Model.Newses.Count() 筆資料，不能直接刪除
        </p>
    }

    <p class="bottom-btn">
    <input type="button" onclick="history.back()" class="btn btn-primary btn-gray" value="回列表" /> 
    </p>
}
