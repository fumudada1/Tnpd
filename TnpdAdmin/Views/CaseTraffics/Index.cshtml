
@using MvcPaging
@using Tnpd.Helpers
@model MvcPaging.IPagedList<TnpdModels.CaseTraffic>

@{
    ViewBag.Title = "案件查詢";
    bool isAdmin = ViewBag.isAdmin;
}

<h2>案件查詢</h2>


    @using (Html.BeginForm())
    {
        <div>
            @if (isAdmin)
            {
                <span> 承辦單位：</span>  <select id="SearchByCategories1" name="SearchByCategories1" style="font-size: 15px">
            </select>
            }
           
            <br/>
            <input type="hidden" id="hidSearchByCategories1" value="@ViewData["SearchByCategories1"]"/>
            <input type="hidden" id="hidSearchByCategories2" value="@ViewData["SearchByCategories2"]"/>
            案號：@Html.InputSearchBox("SearchByCaseId", ViewData["SearchByCaseId"])
            案件狀態： @Html.DropDownList("SearchByStatus", new SelectList(Enum.GetValues(typeof(TnpdModels.CaseProcessStatus))).Where(x => x.Text != "未分派"), "請選擇")
            <br/> 關鍵字:@Html.InputSearchBox("SearchBySubject", ViewData["SearchBySubject"]) (標題、內容、車號、姓名、E-mail、電話、違規事項)

            <br/> 收件日期:<input type="text" name="SearchByStartDate" value="@ViewData["SearchByStartDate"]" class="datepicker" autocomplete="off"/> ~ <input type="text" name="SearchByEndDate" value="@ViewData["SearchByEndDate"]" class="datepicker" autocomplete="off"/>
        </div>
 <div>
        <input type="submit" value="搜尋" />
    </div>

    
    }

<table class="table table-v">
<tr>
    
    <th>
        案號
    </th>
   
    <th>
        申辦時間
    </th>
    <th>
        寄件者
    </th>
    <th>
        主旨
    </th>
    <th>
        承辦單位
    </th>
    <th>
        承辦人
    </th>
    <th>
        預結案日期
    </th>
    <th>
        案件狀態
    </th>
   
    <th>
        派案人
    </th>
    <th>結案人</th>
</tr>
<tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.CaseID.ToString(), "Edit", new { id = item.Id, pclass = Request["pclass"] }) 
        </td>
        
        <td>
           @item.InitDate
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @if (item.Poprocs.Count > 0)
            {
                @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignUnit.ParentUnit.Subject)
                @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignUnit.Subject)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.assignUnit.ParentUnit.Subject)
                @Html.DisplayFor(modelItem => item.assignUnit.Subject)
            }
        </td>
        <td>
            @if (item.Poprocs.Count > 0)
            {
                @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().assignMember.Name)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Predate)
        </td>
        <td>
            @if (item.Poprocs.Count > 0)
            {
                @Html.DisplayFor(modelItem => item.Poprocs.FirstOrDefault().Status)
            }
        </td>
        <td>
            @foreach (var log in item.PoprocslLogs.OrderBy(x=>x.InitDate))
            {
                if (log.Action == "派案")
                {
                    <span>@log.assignMember.Name</span>
                }
              
            }

        </td>
        <td>
            @foreach (var log in item.PoprocslLogs.OrderBy(x=>x.InitDate))
            {
               
                if (log.Action == "結案")
                {
                    <span>@log.assignMember.Name</span>
                }
            }

        </td>
    </tr>
}
</tbody>
</table>

<div class="pager">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
    共  @ViewBag.Total 筆 (不舉發 @ViewBag.PoprocsType1Count 筆，(舉發 @ViewBag.PoprocsType2Count 筆)
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function() {
            $(".datepicker").datepicker();
            $('#SearchByCategories1').append($("<option></option>").attr("value", '').text('請選擇'));
            $('#SearchByCategories2').append($("<option></option>").attr("value", '').text('請選擇'));

            $.getJSON("/units/GetfistUnit").done(function(json) {
                data = json;

                $.each(json,
                    function(i, item) {

                        if (item.Id == $("#hidSearchByCategories1").val()) {

                            $('#SearchByCategories1').append($("<option></option>").attr("value", item.Id)
                                .attr("selected", "selected")
                                .text(item.Subject));
                        } else {
                            $('#SearchByCategories1').append($("<option></option>").attr("value", item.Id)
                                .text(item.Subject));
                        }


                    });

                var cat1id = $('#SearchByCategories1').val();
                $.getJSON("/units/GetUnit/" + cat1id).done(function(json) {
                    data = json;


                    $.each(json,
                        function(i, item) {
                            if (item.Id == $("#hidSearchByCategories2").val()) {
                                $('#SearchByCategories2').append($("<option></option>").attr("value", item.Id).attr("selected", "selected")
                                    .text(item.Subject));
                            } else {
                                $('#SearchByCategories2').append($("<option></option>").attr("value", item.Id)
                                    .text(item.Subject));
                            }
                           

                        });


                });


            });

            $('#SearchByCategories1').change(function() {
                if ($('#SearchByCategories1').val() != '') {
                    $('#SearchByCategories2').children().remove();

                    var id = $('#SearchByCategories1').val();
                    $.getJSON("/units/GetUnit/" + id).done(function(json) {
                        data = json;


                        $.each(json,
                            function(i, item) {
                                $('#SearchByCategories2').append($("<option></option>").attr("value", item.Id)
                                    .text(item.Subject));

                            });


                    });
                } else {
                    $('#SearchByCategories1').children().remove();

                    $('#SearchByCategories1').append($("<option></option>").attr("value", '').text('請選擇'));

                }


            });


        });
    </script>
}   

