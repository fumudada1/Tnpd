@using Tnpd.Models
@model TnpdModels.TrafficSMSCarInfo

@{
    ViewBag.Title = "交通違規簡訊審核編輯";
}

<h2>交通違規簡訊審核編輯</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TrafficSMSCarInfo</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
           
            @Html.LabelFor(model => model.CarNO)
        </div>
        <div class="editor-field">
           
            @Html.HiddenFor(model => model.CarNO)
            <span>@Model.CarNO</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarType)
        </div>
        <div class="editor-field">
           @* @Html.DropDownListFor(model => model.CarType, new SelectList(Enum.GetValues(typeof(TnpdModels.CarType))))
            @Html.ValidationMessageFor(model => model.CarType)*@
            @Html.HiddenFor(model => model.CarType)
            <span>@Model.CarType</span>

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarOwner)
        </div>
        <div class="editor-field">
          @*  @Html.TextBoxFor(model => model.CarOwner, new { placeholder = ModelsAttributeHelper<TnpdModels.TrafficSMSCarInfo>.GetDisplayName("CarOwner") })*@
            @Html.HiddenFor(model => model.CarOwner)
            <span>@Model.CarOwner</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pid)
        </div>
        <div class="editor-field">
           @* @Html.TextBoxFor(model => model.Pid, new { placeholder = ModelsAttributeHelper<TnpdModels.TrafficSMSCarInfo>.GetDisplayName("Pid") })*@
            @Html.HiddenFor(model => model.Pid)
            <span>@Model.Pid</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarAllow)
        </div>
        <div class="editor-field">
          @*  @Html.DropDownListFor(model => model.CarAllow, new SelectList(Enum.GetValues(typeof(TnpdModels.CarAllow))))
            @Html.ValidationMessageFor(model => model.CarAllow)*@
          @Html.HiddenFor(model => model.CarAllow)
          <span>@Model.CarAllow</span>
        </div>

        

        <div class="editor-label">
           申請人姓名
        </div>
        <div class="editor-field">
            @Html.HiddenFor(x=>x.TrafficSMSId)
            <span>@Model.trafficSms.Name</span>

        </div>
        
        <div class="editor-label">
            申請人手機
        </div>
        <div class="editor-field">
           
            <span>@Model.trafficSms.Mobile</span>
            <input type="hidden" name="mobile" value="@Model.trafficSms.Mobile"/>
        </div>

        @Html.HiddenFor(model => model.Poster)
        @Html.HiddenFor(model => model.initOrg)


        @Html.HiddenFor(model => model.InitDate)
        @Html.HiddenFor(model => model.UpdateOrg)


        @Html.HiddenFor(model => model.UpdateDate)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.checkStatus)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.checkStatus, new SelectList(Enum.GetValues(typeof(TnpdModels.SMSStatus))))
            @Html.ValidationMessageFor(model => model.checkStatus)
            @Html.DropDownList("TrafficSMSCarInfoRejectId")
           
        </div>
        <p>
            <input type="submit" value="更新" />
            <input type="button" onclick="history.back()" value="回到上一頁" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            console.log($(this).val());
            if ($("#checkStatus").val() == "未通過") {
                $("#TrafficSMSCarInfoRejectId").show();
            } else {
                $("#TrafficSMSCarInfoRejectId").hide();
            };

            $("#checkStatus").change(function() {
                
                if ($(this).val() == "未通過") {
                    $("#TrafficSMSCarInfoRejectId").show();
                } else {
                    $("#TrafficSMSCarInfoRejectId").hide();
                }
            });
        });
    </script>
    <style>
        #TrafficSMSCarInfoRejectId {
            display: none;
        }
    </style>
}
