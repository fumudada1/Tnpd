@using TnpdModels
@model TnpdModels.AreaSearchDetail
@{
    Layout = null;
}
@{
    ViewBag.Title = "新增";

}
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script type="text/javascript" src="/CKfinder/ckfinder.js"></script>
@{
    if (ViewBag.close == "true")
    {
        <script>
            $(document).ready(function () {
                parent.$.fn.colorbox.close();
                parent.location = '@Url.Action("Edit", "AreaSearch", new { id = ViewBag.AreaSearchId, type = "1" })';
            });
        </script>
    }
    
      
    }
    <style>
        .position {
            width: 27px;
        }
    </style>


    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @ViewBag.Message
    <fieldset>
        <legend>AreaSearchDetail</legend>

         <div class="editor-label">
            @Html.LabelFor(model => model.TownId)

        </div>
        <div class="editor-field">
            @Html.DropDownList("TownId")



        </div>

        <div class="editor-label"  style="display: none">
            @Html.LabelFor(model => model.Subject)

        </div>
        <div class="editor-field"  style="display: none">
            @Html.TextBoxFor(model => model.Subject,new { placeholder=ModelsAttributeHelper<TnpdModels.AreaSearchDetail>.GetDisplayName("Subject") })
            @Html.ValidationMessageFor(model => model.Subject)
       <input type="hidden" name="AreaSearchId" value="@ViewBag.AreaSearchId"/>
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Village)

        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Village,new { placeholder=ModelsAttributeHelper<TnpdModels.AreaSearchDetail>.GetDisplayName("Village") })
            @Html.ValidationMessageFor(model => model.Village)
       
            
        </div>

        <div class="editor-label"  style="display: none">
            @Html.LabelFor(model => model.Proxy)

        </div>
        <div class="editor-field"  style="display: none">
            @Html.TextBoxFor(model => model.Proxy,new { placeholder=ModelsAttributeHelper<TnpdModels.AreaSearchDetail>.GetDisplayName("Proxy") })
            @Html.ValidationMessageFor(model => model.Proxy)
       
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)

        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Address,new { placeholder=ModelsAttributeHelper<TnpdModels.AreaSearchDetail>.GetDisplayName("Address") })
            @Html.ValidationMessageFor(model => model.Address)
       
            
        </div>

        <p>
            <input type="submit" value="新增" class="btn-button"  />
        </p>
    </fieldset>
}



