
@using TnpdModels
@model TnpdModels.PoprocsSubType

@{
    ViewBag.Title = "免回覆設定編輯";
}

<h2>免回覆設定編輯</h2>

    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PoprocsSubType</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Subject,new { placeholder=ModelsAttributeHelper<TnpdModels.PoprocsSubType>.GetDisplayName("Subject") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Article)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Article,new { @class = "ckeditor" })
            @Html.ValidationMessageFor(model => model.Article)
           
        </div>

            @Html.HiddenFor(model => model.Poster)
       

            @Html.HiddenFor(model => model.InitDate)
      

            @Html.HiddenFor(model => model.UpdateDate)
        <p>
            <input type="submit" value="更新" /> <input type="button" onclick="history.back()" value="回到上一頁" />
        </p>
    </fieldset>
}
<style>
    .ckeditor {
        width: 80%;
        height: 300px
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

  
    }
