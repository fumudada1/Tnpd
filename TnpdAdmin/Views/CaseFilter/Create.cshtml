@using TnpdModels
@model TnpdModels.CaseFilters

@{
    ViewBag.Title = "白名單規則設定新增";
}

<h2>白名單規則設定新增</h2>

    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @ViewBag.Message
    <fieldset>
        <legend>CaseFilters</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FilterType)

        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FilterType, new SelectList(Enum.GetValues(typeof(TnpdModels.CaseFilterType))))
            @Html.ValidationMessageFor(model => model.FilterType)
       
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)

        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Subject,new { placeholder=ModelsAttributeHelper<TnpdModels.CaseFilters>.GetDisplayName("Subject") })
            @Html.ValidationMessageFor(model => model.Subject)
       
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeId)

        </div>
        <div class="editor-field">
            @Html.DropDownList("TypeId")
            @Html.ValidationMessageFor(model => model.TypeId)
       
            
        </div>

        

        <p>
            <input type="submit" value="新增" /><input type="button" onclick="history.back()" value="回到上一頁" />
        </p>
    </fieldset>
}
<style>
    #TypeId {
        width: 500px;
    }
</style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
