
@using TnpdModels
@model TnpdModels.StationInfo

@{
    ViewBag.Title = "分局派出所資訊編輯";
}

<h2>分局派出所資訊編輯</h2>

    @using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>StationInfo</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.ParentId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ParentId","我是最上層")
            @Html.ValidationMessageFor(model => model.ParentId)
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TownId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("TownId")
            @Html.ValidationMessageFor(model => model.TownId)
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Subject,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("Subject") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tel)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Tel,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("Tel") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostalCode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.PostalCode,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("PostalCode") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Address,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("Address") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Twd97X)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Twd97X,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("Twd97X") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Twd97Y)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Twd97Y,new { placeholder=ModelsAttributeHelper<TnpdModels.StationInfo>.GetDisplayName("Twd97Y") })
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Article)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Article,new { @class = "ckeditor" })
            @Html.ValidationMessageFor(model => model.Article)
           
        </div>

            @Html.HiddenFor(model => model.ListNum)
       

            @Html.HiddenFor(model => model.Poster)
       
        @Html.HiddenFor(model => model.initOrg)
            @Html.HiddenFor(model => model.InitDate)
       
         @Html.HiddenFor(model => model.UpdateOrg)
            @Html.HiddenFor(model => model.UpdateDate)
        <p>
            <input type="submit" value="更新" /> <input type="button" onclick="history.back()" value="回到上一頁" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

   <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    }
